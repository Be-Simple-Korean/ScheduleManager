<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_calendar_today"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/selector_calendar_item_back"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_calendar_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/selector_calendar_item"
            android:textSize="20dp"
            tools:text="12" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_calendar_schedule"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_calendar_date"
        android:layout_centerInParent="true"
        android:src="@drawable/shape_calendar_is_schedule"
        android:visibility="invisible" />

</LinearLayout>